<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
 >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:background="@drawable/dialog_background"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ch01"
            android:layout_width="150dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="10dp"
            android:src="@drawable/back_drawer"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Title"
            android:id="@+id/Title"
            android:layout_alignTop="@+id/ch01"
            android:textColor="@color/primary"
            android:layout_toEndOf="@+id/ch01"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:id="@+id/Description"
            android:textColor="@color/md_black_1000"
            android:layout_below="@+id/pricesilver"
            android:layout_alignStart="@+id/textView10"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Golden Pack"
            android:id="@+id/textView10"
            android:textColor="#C0CA33"
            android:layout_below="@+id/Title"
            android:layout_alignStart="@+id/Title"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Normal Pack"
            android:id="@+id/textView11"
            android:textColor="#9E9E9E"
            android:textSize="15dp"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/Description" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="200 TTC"
            android:id="@+id/pricegolden"
            android:layout_alignBottom="@+id/textView10"
            android:layout_toEndOf="@+id/textView11"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginLeft="17dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="200 TTC"
            android:id="@+id/pricesilver"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_alignBottom="@+id/textView11"
            android:layout_toEndOf="@+id/textView11"
            android:layout_marginLeft="17dp" />


    </RelativeLayout>

</FrameLayout>